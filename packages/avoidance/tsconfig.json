{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "isolatedModules": true,
    // Typescript Options
    "strict": true,
    "allowSyntheticDefaultImports": true,
    // For declaration file output
    "declaration": true,
    "declarationDir": "dist/types",
    // For intermediate / temporary build output
    // (not used for prod builds, and should be ignored)
    "outDir": "build"
  },
  "include": ["src/**/*"]
}